<div class="container mt-5"> 

  <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top py-3">
    <div class="container">
      <div class="text-center mx-auto"> <%# Center the buttons %>
        <%= link_to "PÃ¡gina principal", root_path, class: "btn btn-secondary me-2" %> 
        <%= link_to "Agregar proveedor", new_vendor_path, class: "btn btn-primary" %>
      </div>
    </div>
  </nav>

  <div class="container mt-5">
    <h1 class="text-center mb-4 sticky-top bg-white pt-3">Proveedores</h1>
    <div style="overflow-y: auto; max-height: calc(100vh - 200px);"> <%# Make the table scrollable with max height %>
      <table class="table table-striped table-hover">
          <thead>
              <tr>
                  <th>Nombre</th>
                  <th class="text-center">Acciones</th>
              </tr>
          </thead>
          <tbody>
              <% @vendors.each do |vendor| %>
                  <tr>
                      <td class="py-2"> <%= vendor.name %></td>
                      <td class="text-center">
                          <%= link_to "Ver", vendor, class: "btn btn-primary btn-sm me-2" %>
                          <%= link_to "Editar", edit_vendor_path(vendor), class: "btn btn-secondary btn-sm me-2" %>
                          <%= link_to "Borrar", vendor, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
                      </td> <%# Removed the extra <div> here %>
                  </tr>
              <% end %>
          </tbody>
      </table>
    </div>
  </div>

  <div class="text-center mt-4">
    <nav aria-label="Vendor pagination"> 
      <ul class="pagination justify-content-center"> <%# Apply Bootstrap pagination classes and center %>
        <%= paginate @vendors %> 
      </ul>
    </nav>
  </div>

</div>