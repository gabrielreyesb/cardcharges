<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag 'favicon.png' %>
    <title>Cardcharges</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="container"> 
      <% if user_signed_in? %>
        <div class="user-info d-flex justify-content-center align-items-center"> 
          <span class="me-2">Logged in as <strong><%= current_user.email %></strong>.</span>
          <%= link_to 'Edit profile', edit_user_registration_path, class: "btn btn-outline-secondary me-2" %>
          <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
        </div>
      <% else %>
        <div class="user-info d-flex justify-content-end">  
          <%= link_to 'Sign up', new_user_registration_path, class: "btn btn-outline-secondary me-2" %> 
          <%= link_to 'Login', new_user_session_path, class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= yield %> 
    </div>
  </body>
</html>
